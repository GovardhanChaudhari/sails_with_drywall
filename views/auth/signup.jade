extends ../layouts/default
block head
title Sign Up
    block neck
        // STYLES
        link(rel="stylesheet", href="/styles/about.css")
        link(rel="stylesheet", href="/styles/bootstrap-theme.css")
        link(rel="stylesheet", href="/styles/bootstrap.css")
        link(rel="stylesheet", href="/styles/importer.css")
        // STYLES END
    block feet
        //script(src='/views/signup/index.min.js?#{cacheBreaker}')
block body
    div.row
        div.col-sm-6
            div.page-header
                h1 Sign Up
            div#signup
            if oauthTwitter || oauthGitHub || oauthFacebook || oauthGoogle || oauthTumblr
                hr
                p Or sign up using...
                if oauthMessage
                    div.alerts
                        div.alert.alert-info.alert-dismissable
                            button.close(type='button', data-dismiss='alert') &times;
                            | #{oauthMessage}&nbsp;
                            b
                                a(href='/login/') Login Here
                div.btn-group.btn-group-justified
                    if oauthTwitter
                        a.btn.btn-info(href='/signup/twitter/')
                            i.fa.fa-twitter.fa-lg
                            | Twitter
                    if oauthGitHub
                        a.btn.btn-info(href='/signup/github/')
                            i.fa.fa-github.fa-lg
                            | GitHub
                    if oauthFacebook
                        a.btn.btn-info(href='/signup/facebook/')
                            i.fa.fa-facebook-square.fa-lg
                            | Facebook
                    if oauthGoogle
                        a.btn.btn-info(href='/signup/google/')
                            i.fa.fa-google-plus-square.fa-lg
                            | Google
                    if oauthTumblr
                        a.btn.btn-info(href='/signup/tumblr/')
                            i.fa.fa-tumblr-square.fa-lg
                            | Tumblr
        div.col-sm-6.marketing
            div.page-header
                h1 Campy Benefits
            p.lead Really, you will love it inside. It's super great!
            i.fa.fa-thumbs-o-up.super-awesome
        form(method='GET', action='/user/create')
            div.form-group
                label Pick a Username:
                input.form-control(type='text', name='username', value='')
            div.form-group
                label Enter Your Email:
                input.form-control(type='text', name='email', value!='')
            div.form-group
                label Create a Password:
                input.form-control(type='password', name='password', value='')
            div.form-group
                button.btn.btn-primary.btn-signup(type='submit') Create My Account